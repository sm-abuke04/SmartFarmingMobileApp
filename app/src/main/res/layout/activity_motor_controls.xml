<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".motors.MotorControlsActivity">

    <!-- HEADER -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Controls"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#263238"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- ACTUATOR TYPE SWITCH -->
    <LinearLayout
        android:id="@+id/actuatorTypeSwitcher"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_switcher"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/btnGlobal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Global"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/bg_switch_on_green"/>

        <TextView
            android:id="@+id/btnSelected"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Selected"
            android:textColor="#FFFFFF"
            android:background="@drawable/bg_switch_on_green"/>
    </LinearLayout>

    <!-- ACTUATORS LIST -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvActuators"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/actuatorTypeSwitcher"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_actuator"/>

    <!-- EMPTY STATE -->
    <LinearLayout
        android:id="@+id/emptyState"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/rvActuators"
        app:layout_constraintBottom_toBottomOf="@id/rvActuators"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/ic_actuator"
            app:tint="#B0BEC5"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No actuators available"
            android:textColor="#90A4AE"
            android:layout_marginTop="8dp"/>
    </LinearLayout>
    <include
        layout="@layout/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>
