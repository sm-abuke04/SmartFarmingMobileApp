<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="3dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@drawable/bg_card_gradient_modern">

        <View
            android:id="@+id/iconBg"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_white_alpha_circle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/ivSensorIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_actuator"
            app:tint="@color/white"
            app:layout_constraintStart_toStartOf="@id/iconBg"
            app:layout_constraintEnd_toEndOf="@id/iconBg"
            app:layout_constraintTop_toTopOf="@id/iconBg"
            app:layout_constraintBottom_toBottomOf="@id/iconBg"/>

        <TextView
            android:id="@+id/tvActuatorName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:text="Motor 1"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/tvStatus"
            app:layout_constraintEnd_toStartOf="@+id/switchActuator"
            app:layout_constraintStart_toEndOf="@id/iconBg"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manual Mode Active"
            android:textColor="#CCFFFFFF"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tvActuatorName"
            app:layout_constraintTop_toBottomOf="@id/tvActuatorName" />

        <Switch
            android:id="@+id/switchActuator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:thumbTint="@color/white"
            android:trackTint="#80FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>